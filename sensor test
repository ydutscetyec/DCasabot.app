#include <PololuQTRSensors.h>

// Define sensor pins
const int sensorPins[] = {22, 25, 32};  // D22, D25, D32
const int emitterPin = 2;                // Optional: controls the IR LED

// Create QTRSensorsRC object
PololuQTRSensorsRC qtr(sensorPins, sizeof(sensorPins) / sizeof(sensorPins[0]), 2000, emitterPin);

void setup() {
  Serial.begin(115200);
  delay(500);  // Wait for Serial Monitor to initialize

  // Optional: Turn on the emitter LED
  pinMode(emitterPin, OUTPUT);
  digitalWrite(emitterPin, HIGH);

  Serial.println("QTR-1RC Test with Pololu Library");
}

void loop() {
  unsigned int sensorValues[3];
  qtr.read(sensorValues);

  Serial.print("Left: ");
  Serial.print(sensorValues[0]);
  Serial.print(" | Center: ");
  Serial.print(sensorValues[1]);
  Serial.print(" | Right: ");
  Serial.println(sensorValues[2]);

  delay(200);  // Adjust delay for readability
}

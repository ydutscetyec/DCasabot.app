#include <QTRSensors.h>

#define LEFT_SENSOR   22
#define MID_SENSOR    25
#define RIGHT_SENSOR  32

unsigned char sensorPins[3] = {LEFT_SENSOR, MID_SENSOR, RIGHT_SENSOR};

QTRSensorsRC qtr(sensorPins, 3);  // 3 sensors

unsigned int sensorValues[3];

void setup() {
  Serial.begin(115200);
  Serial.println("=== QTR-1RC Sensor Test ===");
}

void loop() {
  qtr.read(sensorValues);

  Serial.print("Left: "); Serial.print(sensorValues[0]);
  Serial.print("\tMid: "); Serial.print(sensorValues[1]);
  Serial.print("\tRight: "); Serial.println(sensorValues[2]);

  delay(200);
}
